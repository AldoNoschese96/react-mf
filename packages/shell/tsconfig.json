{
  "compilerOptions": {
    "baseUrl": "./src",
    "jsx": "react",
    "esModuleInterop": true,
    "paths": {
      "@core/*": [
        "./core/*"
      ],
      "@infrastructure/*": [
        "./infrastructure/*"
      ],
      "@presentation/*": [
        "./presentation/*"
      ]
    }
  },
  "include": [
    "./**/*.ts",
    "./**/*.tsx",
    "src/**/*",
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/*.cy.ts",
    "cypress/e2e/Auth.cy.ts",
    "cypress/e2e/Auth.cy.ts"
  ],
  "plugins": []
}